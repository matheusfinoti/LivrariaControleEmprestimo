@model LivrariaControleEmprestimo.DATA.Models.Livro

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>
<div>
    <h4>Livro</h4>
    <form asp-action="Edit" method="post">
        <br />
        <div>
            <a class="form-group btn btn-success" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a>
            <a class="form-group btn btn-dark" asp-action="Index">Voltar</a>
        </div>
        <br />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="card">
            <div class="card-header">Informações</div>
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="LivroNome" class="control-label"></label>
                    <input disabled asp-for="LivroNome" class="form-control" />
                    <span asp-validation-for="LivroNome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LivroAutor" class="control-label"></label>
                    <input disabled asp-for="LivroAutor" class="form-control" />
                    <span asp-validation-for="LivroAutor" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="form-group col-md-4">
                        <label asp-for="LivroEditora" class="control-label"></label>
                        <input disabled asp-for="LivroEditora" class="form-control" />
                        <span asp-validation-for="LivroEditora" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="LivroAnoPublicacao" class="control-label"></label>
                        <input disabled asp-for="LivroAnoPublicacao" class="form-control" />
                        <span asp-validation-for="LivroAnoPublicacao" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="LivroEdicao" class="control-label"></label>
                        <input disabled asp-for="LivroEdicao" class="form-control" />
                        <span asp-validation-for="LivroEdicao" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
